{% extends "layouts/main.njk" %}

{% set pageName = "Home" %}

{% block content %}

  <div class="govuk-grid-row">
    <h1 class="govuk-heading-l">Crown Developments prototype</h1>

    <div class="govuk-tabs" data-module="govuk-tabs">
      <h2 class="govuk-tabs__title">
        Prototypes
      </h2>
      <!--tab headings-->
      <ul class="govuk-tabs__list">
        <li class="govuk-tabs__list-item govuk-tabs__list-item--selected">
          <a class="govuk-tabs__tab" href="#current-service">Current service</a>
        </li>
        <li class="govuk-tabs__list-item">
          <a class="govuk-tabs__tab" href="#features">Upcoming features</a>
        </li>
        <li class="govuk-tabs__list-item">
          <a class="govuk-tabs__tab" href="#user-testing">User testing</a>
        </li>
        <li class="govuk-tabs__list-item">
          <a class="govuk-tabs__tab" href="#copy-changes">Copy changes</a>
        </li>
      </ul>
      <!--tab content-->

      <!--CURRENT SERVICE-->

      <div class="govuk-tabs__panel" id="current-service">
        <h2 class="govuk-heading-medium">Current service</h2>
        <h3 class="govuk-heading-s">Front office</h3>
        <p class="govuk-body">
          <a href="/application-info" class="govuk-link">Have your say - Application information</a>
        </p>
        <p class="govuk-body">
          <a href="/start" class="govuk-link">Have your say - Start</a>
        </p>
        <h3 class="govuk-heading-s">Back office</h3>
        <ul class="govuk-list govuk-list--bullet">
          <li class="govuk-body">
            <a href="current-service/back-office/create/1-type-of-application" class="govuk-link">Create a new case</a>
          </li>
          <li class="govuk-body">
            <a href="current-service/back-office/manage-application" class="govuk-link">Manage application page</a>
          </li>
        </ul>
      </div>

      <!--FEATURES-->

      <div class="govuk-tabs__panel" id="features">
        <ul class="govuk-task-list">
          <h2 class="govuk-heading-medium">Upcoming features</h2>

          <details class="govuk-details">
            <summary class="govuk-details__summary">
              <span class="govuk-details__summary-text">
                Deployed
              </span>
            </summary>
            <div class="govuk-details__text">

              <li class="govuk-task-list__item govuk-task-list__item--with-link">
                <div class="govuk-task-list__name-and-hint">
                  <a class="govuk-link govuk-task-list__link" href="features/application-updates/index.html">Application updates</a>
                  <div class="govuk-task-list__hint">Add ability for back office users to update front office users with updates about an application</div>
                </div>

              </li>

              <li class="govuk-task-list__item govuk-task-list__item--with-link">
                <div class="govuk-task-list__name-and-hint">
                  <a class="govuk-link govuk-task-list__link" href="features/application-stages/index.html">Application stages</a>
                  <div class="govuk-task-list__hint">Application stages accordion designs</div>
                </div>

              </li>

              <li class="govuk-task-list__item govuk-task-list__item--with-link">
                <div class="govuk-task-list__name-and-hint">
                  <a class="govuk-link govuk-task-list__link" href="features/summary-list/index.html">Application summary</a>
                  <div class="govuk-task-list__hint">Redesign of 'Application information' page to summary list format following user testing</div>
                </div>

              </li>

            </details>

            <details class="govuk-details">
              <summary class="govuk-details__summary">
                <span class="govuk-details__summary-text">
                  In development
                </span>
              </summary>
              <div class="govuk-details__text">

                <li class="govuk-task-list__item govuk-task-list__item--with-link">
                  <div class="govuk-task-list__name-and-hint">
                    <a class="govuk-link govuk-task-list__link" href="features/words-we-use/index.html">Words we use</a>
                    <div class="govuk-task-list__hint">Add words we use page to detailed information page</div>
                  </div>

                </li>

                <li class="govuk-task-list__item govuk-task-list__item--with-link">
                  <div class="govuk-task-list__name-and-hint">
                    <a class="govuk-link govuk-task-list__link" href="features/withdrawn-application/index.html">Withdrawn applications</a>
                    <div class="govuk-task-list__hint">Front office updates when an application is withdrawn</div>
                  </div>

                </li>

                <li class="govuk-task-list__item govuk-task-list__item--with-link">
                  <div class="govuk-task-list__name-and-hint">
                    <a class="govuk-link govuk-task-list__link" href="features/column-removal/index.html">Column removal</a>
                    <div class="govuk-task-list__hint">Resolve accessibility issue with hidden table columns due to 2D scrolling</div>
                  </div>

                </li>

                <li class="govuk-task-list__item govuk-task-list__item--with-link">
                  <div class="govuk-task-list__name-and-hint">
                    <a class="govuk-link govuk-task-list__link" href="features/filters/index.html">Filters</a>
                    <div class="govuk-task-list__hint">Front office filters for applications and written representations</div>
                  </div>
                </li>
              </details>

              <li class="govuk-task-list__item govuk-task-list__item--with-link">
                <div class="govuk-task-list__name-and-hint">
                  <a class="govuk-link govuk-task-list__link" href="features/multiple-entities/index.html">Multiple entities</a>
                  <div class="govuk-task-list__hint">Multiple LPAs, applicants and agents.</div>
                </div>
                <div class="govuk-task-list__status">
                  <strong class="govuk-tag govuk-tag--blue">In progress</strong>
                </div>
              </li>

              <li class="govuk-task-list__item govuk-task-list__item--with-link">
                <div class="govuk-task-list__name-and-hint">
                  <a class="govuk-link govuk-task-list__link" href="features/application-history/index.html">Application history</a>
                  <div class="govuk-task-list__hint">Implement application history on back office</div>
                </div>
                <div class="govuk-task-list__status">
                  <strong class="govuk-tag govuk-tag--yellow">In review</strong>
                </div>
              </li>

            </ul>

          </div>

          <!--USER TESTING-->
          <div class="govuk-tabs__panel" id="user-testing">
            <ul class="govuk-task-list">
              <h2 class="govuk-heading-medium">User testing</h2>
              <li class="govuk-task-list__item govuk-task-list__item--with-link">
                <div class="govuk-task-list__name-and-hint">
                  <a class="govuk-link govuk-task-list__link" href="user-testing/a-b-edit-published-update">A/B testing: Editing published update</a>
                  <div class="govuk-task-list__hint">Design options where a user is editing a published update but does not make any changes.</div>
                </div>
                <div class="govuk-task-list__status">
                  <strong class="govuk-tag govuk-tag--green">Complete</strong>
                </div>
              </li>
            </ul>
          </div>

          <div class="govuk-tabs__panel" id="copy-changes">
            <h2 class="govuk-heading-medium">Copy changes</h2>
            <li class="govuk-task-list__item govuk-task-list__item--with-link">
              <div class="govuk-task-list__name-and-hint">
                <a class="govuk-link govuk-task-list__link" href="features/change-procedure/index.html">Procedure type hint text</a>
                <div class="govuk-task-list__hint">Add warning/hint message to back office<br>
                  procedure question</div>
              </div>
              <div class="govuk-task-list__status">
                <strong class="govuk-tag govuk-tag--green">Done</strong>
              </div>
            </li>

            <li class="govuk-task-list__item govuk-task-list__item--with-link">
              <div class="govuk-task-list__name-and-hint">
                <a class="govuk-link govuk-task-list__link" href="copy-changes/unpublish-banners/index.html">Unpublish banners</a>
                <div class="govuk-task-list__hint">Changing back office unpublish and publish success panels to notification banners<br>
                  procedure question</div>
              </div>
              <div class="govuk-task-list__status">
                <strong class="govuk-tag govuk-tag--yellow">In progress</strong>
              </div>
            </li>
          </div>
        </div>

      </div>

    {% endblock %}